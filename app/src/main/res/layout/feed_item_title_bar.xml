<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- profile pic -->
    <ImageView
        android:id="@+id/feed_item_title_bar_iv_user_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"/>

    <!-- title -->
    <TextView
        android:id="@+id/feed_item_title_bar_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/feed_item_title_bar_iv_user_pic"
        android:layout_toEndOf="@+id/feed_item_title_bar_iv_user_pic"
        android:maxLines="3"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="normal"/>

    <!-- sub title -->
    <TextView
        android:id="@+id/feed_item_title_bar_tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feed_item_title_bar_tv_title"
        android:layout_toEndOf="@+id/feed_item_title_bar_iv_user_pic"
        android:maxLines="1"/>

</RelativeLayout>