<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_friend_item_rel"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <ImageView
        android:id="@+id/find_friend_item_iv_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/find_friend_item_center_view"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/find_friend_item_iv_pic"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/find_friend_item_tv_mutual_friends_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/find_friend_item_center_view"
        android:layout_alignStart="@+id/find_friend_item_center_view"/>

    <TextView
        android:id="@+id/find_friend_item_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/find_friend_item_tv_mutual_friends_count"
        android:layout_alignStart="@+id/find_friend_item_center_view"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/find_friend_item_center_view"
        android:layout_below="@+id/find_friend_item_center_view"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/find_friend_item_btn_left"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/find_friend_item_btn_right"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:textColor="#acacac"/>
    </LinearLayout>


</RelativeLayout>