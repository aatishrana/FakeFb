<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <!-- emo -->
    <ImageView
        android:id="@+id/feed_item_emo_bar_iv_emo"
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_purple"/>

    <!-- emo count -->
    <TextView
        android:id="@+id/feed_item_emo_bar_tv_count_emo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/feed_item_emo_bar_iv_emo"
        android:layout_toEndOf="@+id/feed_item_emo_bar_iv_emo"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black"/>

    <!-- views pic -->
    <TextView
        android:id="@+id/feed_item_emo_bar_tv_count_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/feed_item_emo_bar_iv_emo"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@android:color/black"/>

</RelativeLayout>