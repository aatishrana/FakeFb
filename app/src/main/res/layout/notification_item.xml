<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/find_friend_item_rel"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

    <ImageView
        android:id="@+id/noti_item_iv_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/noti_item_iv_pic">

        <TextView
            android:id="@+id/noti_item_tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/noti_item_iv_type_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/noti_item_tv_one"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/noti_item_tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/noti_item_iv_type_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-5dp"
            android:layout_toEndOf="@+id/noti_item_iv_type_icon"/>

    </RelativeLayout>


</RelativeLayout>